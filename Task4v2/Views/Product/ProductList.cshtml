@model List<Task4v2.Models.ProductModel>
@{
    ViewData["Title"] = "Product List";
}

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-4">
        <h4>@item.Name</h4>
        @Html.ActionLink("Delete", "DeleteProduct",
          new { id=item.Id },
          new
          {
              onclick = "return confirm('Are you sure you want to delete this user?');",
              @class = "delete-button"
          });

        @Html.ActionLink("Edit", "EditProduct",
           new { id=item.Id });

        @Html.ActionLink("Details", "DetailsProduct",
           new { id=item.Id });
    </div>
}