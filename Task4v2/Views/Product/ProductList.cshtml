@model List<Task4v2.Models.ProductModel>
@{
    ViewData["Title"] = "Product List";
}
<h2>Product List</h2>
<table class="table">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Delete</th>
        <th scope="col">Edit</th>
        <th scope="col">Details</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                @Html.ActionLink("Delete", "DeleteProduct",
             new { id = item.Id },
             new
             {
                 onclick = "return confirm('Are you sure you want to delete this one?');"
             })
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProduct",
             new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Details", "DetailsProduct",
                           new { id = item.Id })
            </td>
        </tr>
    }
</table>
