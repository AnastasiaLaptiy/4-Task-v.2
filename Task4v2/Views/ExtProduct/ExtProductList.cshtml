@model List<Task4v2.Models.ExtProductModel>

@{
    ViewBag.Title = "ExtProduct List";
}

<h2>ExtProduct List</h2>

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-4">
        <h4>@item.Name</h4>
        @Html.ActionLink("Delete", "DeleteExtProduct",
          new { id = item.Id },
          new
          {
              onclick = "return confirm('Are you sure you want to delete this user?');",
              @class = "delete-button"
          });

        @Html.ActionLink("Edit", "EditExtProduct",
           new { id = item.Id });

        @Html.ActionLink("Details", "DetailsExtProduct",
           new { id = item.Id });
    </div>
}
